<?xml version="1.0" encoding="utf-8"?>
<s:Form xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	<fx:Declarations>
		<fx:int id="busstop_id"/>
	</fx:Declarations>
	
	<s:FormItem label="Bairro">
		<s:TextInput id="neighborhood" width="150" maxChars="100"/>
	</s:FormItem>
	<s:FormItem label="Cidade">
		<s:TextInput id="city" width="150" maxChars="100"/>
	</s:FormItem>
	
	<mx:ControlBar width="100%" height="30" horizontalAlign="right"
				   paddingBottom="0" paddingLeft="0" paddingRight="15" paddingTop="0"
				   verticalAlign="middle">
		<mx:LinkButton label="Salvar" id="saveCommand" fontWeight="bold" paddingLeft="0" paddingRight="0"
					   textDecoration="underline"/>
		<mx:LinkButton label="Cancelar" id="cancel" paddingLeft="0" paddingRight="0" />
	</mx:ControlBar>
	
</s:Form>
